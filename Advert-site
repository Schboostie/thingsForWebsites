.parallax-container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* Adjust the background color and opacity as desired */
  z-index: -1;
}

.parallax-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.7)); /* Adjust the gradient colors and opacity as desired */
  z-index: -1;
}

.parallax-layer {
  transform: translateZ(0);
  animation: parallaxAnimation 10s infinite linear; /* Adjust the animation duration as desired */
}

@keyframes parallaxAnimation {
  0% {
    transform: translateZ(0);
  }
  100% {
    transform: translateZ(-100px); /* Adjust the translateZ value to control the depth of the effect */
  }
}

